<simulation threading='False' verbosity='low'>
   <ffsocket mode='unix' name='driver'>
       <address>bosons-periodic</address>
   </ffsocket>
   
   <total_steps> 1000000 </total_steps>

   <output prefix="data">
      <trajectory stride="100" filename="pos" cell_units="angstrom">positions{angstrom}</trajectory>
      <properties stride="100"> [ step, time{femtosecond}, conserved, temperature{kelvin}, potential, virial_fq, kinetic_td{kelvin} ] </properties>
   </output>

   <prng>
      <seed> 18885 </seed>
   </prng>

   <system>

      <forces> 
          <force forcefield="driver"></force>
      </forces>

      <initialize nbeads="8">
	<file mode='xyz'> start.xyz </file>
	<cell mode='abc'>
         [ 8.35, 8.35, 8.35 ]
	</cell>
	<velocities mode='thermal' units='kelvin'> 1.5 </velocities>
      </initialize>

      <normal_modes propagator='bab'>
	      <nmts> 10 </nmts>
	      <bosons mic="True"> [0, 1, 2] </bosons>
      </normal_modes>

      <ensemble>
         <temperature units="kelvin"> 1.5 </temperature>
      </ensemble>

      <motion mode="dynamics">
	<fixcom> False </fixcom>
        <dynamics mode="nvt">
         <timestep units="femtosecond"> 4 </timestep>
  	  <thermostat mode='pile_l'>
		<tau units='femtosecond'>100</tau>
	  </thermostat>

        </dynamics>
      </motion>

  </system>

</simulation>
